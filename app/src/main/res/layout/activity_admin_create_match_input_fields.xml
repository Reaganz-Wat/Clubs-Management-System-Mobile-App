<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin_create_match_inputFields">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/matchInpufFieldsToolbar"
        android:layout_width="match_parent"
        style="@style/TOOLBAR"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        style="@style/TOPCURVE"
        android:layout_height="50dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ROUNDCURVEBACKGROUND"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 1: "
                    android:textSize="18sp"
                    />
                <Spinner
                    android:id="@+id/team1_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team 2: "
                    android:textSize="18sp"
                    />
                <Spinner
                    android:id="@+id/team2_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <EditText
                android:id="@+id/matchDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Date YYYY: MMM: DDD"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/createMatchButton"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20sp"
                android:text="Create Match"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>